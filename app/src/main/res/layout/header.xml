<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:background="@drawable/group_42"
    android:gravity="bottom"
    android:padding="20dp"
    app:flow_horizontalAlign="center"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/proPic"
            android:layout_width="148dp"
            android:layout_height="153dp"
            android:layout_marginTop="4dp"
            android:cropToPadding="true"
            android:isScrollContainer="false"
            android:outlineSpotShadowColor="#C58E8E"
            android:padding="10dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/component_20" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/system"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/proPic"
            app:layout_constraintEnd_toEndOf="@+id/proPic"
            app:layout_constraintStart_toStartOf="@+id/proPic" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>